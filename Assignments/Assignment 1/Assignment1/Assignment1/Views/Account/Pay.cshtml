@model Assignment1.Models.Account
@{
    ViewData["Title"] = "Pay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Pay Bills</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="PayBill">
            <div class="form-group">
                <label>Amount</label>
                @Html.TextBox("AccountFrom", null, new { @type = "number" })
            </div>
            <div class="form-group">
                <label>Amount</label>
                @Html.TextBox("Amount", null, new { @type = "number", @step = 0.01 })
            </div>
            <div class="form-group">
                <input type="submit" value="Pay Bill" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>