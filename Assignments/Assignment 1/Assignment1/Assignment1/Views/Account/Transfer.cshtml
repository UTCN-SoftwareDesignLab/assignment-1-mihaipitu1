@model Assignment1.Models.Account

@{
    ViewData["Title"] = "Transfer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Transfer money</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="TransferMoney">
            <div class="form-group">
                <label>Id Account From</label>
                @Html.TextBox("AccountFrom",null, new {@type = "number"})
             </div>
            <div class="form-group">
                <label>Id Account To</label>
                @Html.TextBox("AccountTo", null, new { @type = "number" })
            </div>
            <div class="form-group">
                <label>Amount</label>
                @Html.TextBox("Amount", null, new { @type = "number" ,@step = 0.01})
            </div>
            <div class="form-group">
                <input type="submit" value="Transfer" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>