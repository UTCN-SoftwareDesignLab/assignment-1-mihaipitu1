@model IEnumerable<Assignment1.Models.Client>

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Clients</h2>

<p>
    <a asp-action="Create">Add new client</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
               @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>    
               @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.GetId() }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.GetId() })
            </td>
        </tr>
}
    </tbody>
</table>
